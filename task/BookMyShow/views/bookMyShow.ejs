<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookMyShow</title>
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css"
      integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ=="
      crossorigin="anonymous"
    />
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #fffdf5;
      }

      header {
        background-color: #1e212d;
        color: white;
        padding: 15px 0;
      }

      .header-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .logo {
        width: 140px;
      }

      .search-bar {
        display: flex;
        align-items: center;
        border-radius: 25px;
        background: #2c2f3b;
        padding: 5px 15px;
        width: 50%;
      }

      .search-bar input {
        flex: 1;
        border: none;
        outline: none;
        background: none;
        color: white;
        padding: 8px;
        font-size: 14px;
      }

      .search-bar input::placeholder {
        color: #777;
      }

      .search-bar i {
        color: #999;
        margin-right: 10px;
      }

      .sign-in {
        background-color: #ff3b3f;
        border: none;
        color: white;
        padding: 8px 20px;
        border-radius: 25px;
        font-size: 14px;
      }

      nav {
        background-color: #fff;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
      }

      nav a {
        margin: 0 15px;
        text-decoration: none;
        color: #444;
        font-size: 16px;
      }

      nav a:hover {
        color: #ff3b3f;
      }

      .hero {
        background: url(../img/1726036566435_playcardnewweb.avif) no-repeat center/cover;
        text-align: center;
        padding: 100px 10px;
        margin-top: 20px;
        color: white;
      }

      .hero h1 {
        font-size: 50px;
        margin-bottom: 20px;
        font-weight: bold;
      }

      .hero p {
        font-size: 18px;
        margin-bottom: 30px;
      }

      .btn-primary {
        background-color: #ff3b3f;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        color: white;
      }

      .btn-primary:hover {
        background-color: #e53437;
      }

      .card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
      }

      .card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
      }

      .card:hover {
        transform: scale(1.05);
      }

      footer {
        background: #1e212d;
        color: white;
        padding: 20px 0;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header>
      <div class="container header-container">
        <img src="../img/logo.png" alt="Logo" class="logo" />
        <div class="search-bar">
          <i class="fa-solid fa-magnifying-glass"></i>
          <input type="text" placeholder="Search Movies, Events, Plays..." />
        </div>
        <button class="sign-in">Sign in</button>
      </div>
    </header>

    <!-- Navigation -->
    <nav>
      <div class="main-container">
        <div class="h2-main d-flexing">
          <div class="h2-inner-1 flex">
            <a href="/imageUpload ">Movies </a>
            <a href="">Stream</a>
            <a href="">Events</a>
            <a href="">Plays</a>
            <a href="">Sports</a>
            <a href="">Activities</a>
          </div>
         
        </div>
      </div>
    </nav>
  </header>



    <!-- Hero Section -->
    <section class="hero">
       <button class="btn-primary">Book Now</button>
    </section>

    <!-- Movies Section -->
    <main class="container my-5">
      <h2 class="text-center mb-4">Trending Movies</h2>
      <div class="row g-4">
        <% dataData.map((data) => { %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="card">
            <img src="<%= data.image %>" alt="<%= data.title %>" />
            <div class="p-3">
              <h5 class="text-center"><%= data.name %></h5>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </main>

    <!-- Footer -->
    <footer>
      <p>&copy; 2024 BookMyShow. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
